<style>
  #myform input{
    margin-top:6px;
  }
  #myform textarea{
    margin-top:6px;
  }
  #myform label{
    margin-top:6px;
  }
  #myform select{
    margin-top:6px;
  }
</style>
<script >
//---先校验，为true 才提交
   function onSubPub(){
       if (pubform.shopname.value == '') {
           alert('营业点名称不允许为空');
           pubform.shopname.focus();
           return false;
       }
       if (pubform.shopintr.value == '') {
           alert('营业点简介不允许为空');
           pubform.shopintr.focus();
           return false;
       }
       if (pubform.shoptype.value == '') {
           alert('营业点类型不允许为空');
           pubform.shoptype.focus();
           return false;
       }
       if (pubform.keywords.value == '') {
           alert('关键词不允许为空');
           pubform.shopname.focus();
           return false;
       }
       if (pubform.photourl.value == '') {
           alert('店铺图片不允许为空');
           pubform.photourl.focus();
           return false;
       }
       return true;
   }
   
</script>
<!-- - - - - - - - - - - - - - - 模态框 - - - - - - - - - - - - - - - -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">     
    <form  id = 'pubform' name= 'pubform' method="post" action="./pubShop" onsubmit="return onSubPub();" enctype="multipart/form-data">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
              &times;
          </button>
          <h4 class="modal-title" id="myModalLabel">
              填写营业点信息
          </h4>
        </div>
        <div class="modal-body" style="margin: 20px 20px 20px 20px ; border-left: 35px;">         
          <div class="form-group" id='myform'>
            <input type="text" class="form-control" name="shopname" placeholder="请输入营业点名称">
            <textarea class="form-control" rows="5" name="shopintr" placeholder="请输入营业简介">  
            </textarea>
            <input type="text" class="form-control" name="keywords" id="name" placeholder="请输入查询关键词">
            <select class="form-control" name="shoptype">
              <option value='0'>请选择经营类别</option>
              <% shoptypeRs.forEach(function(row){ %>
              <option value="<%-row.id%>"><%-row.typename%></option>               
              <%})%>
            </select>
            <label for="lastname" class="col-sm-2 control-label">店铺图片</label>
            <input type="file" id="inputfile" name = 'photourl' >
            <input type="hidden" name="lng">
            <input type="hidden" name="lat">
          </div>
        </div>
          <div class="modal-footer">           
            <input type="submit" class="btn btn-primary" onclick='dian();' value ='提交'>
            <button type="button" class="btn btn-default" data-dismiss="modal">关闭
            </button>
          </div>
        </div><!-- /.modal-content --> 
      </form>
   </div><!-- /.modal -->
</div>
